{
  "name": "adam-international-hospital",
  "version": "1.0.0",
  "type": "module",
  "description": "Adam International Hospital - Fertility Treatment Center Website",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run lint && npm run test:a11y",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:a11y": "axe http://localhost:3000 --exit",
    "test:a11y:ci": "axe http://localhost:3000 --save axe-results.json",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --upload.target=temporary-public-storage",
    "lighthouse:desktop": "lhci autorun --collect.settings.preset=desktop",
    "lighthouse:mobile": "lhci autorun --collect.settings.preset=mobile",
    "audit": "npm run lighthouse && npm run test:a11y",
    "audit:full": "npm run lint && npm run test && npm run test:a11y && npm run lighthouse",
    "monitor": "node scripts/performance-monitor.js",
    "monitor:ci": "npm run dev & sleep 10 && npm run monitor && kill %1",
    "optimize": "node scripts/optimize.js",
    "optimize:images": "node scripts/optimize-images.js",
    "optimize:all": "npm run optimize && npm run optimize:images"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.36.0",
    "babel-jest": "^30.1.2",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^27.0.0",
    "vite": "^7.1.7"
  },
  "keywords": [
    "fertility",
    "hospital",
    "medical",
    "healthcare",
    "ivf",
    "icsi"
  ],
  "author": "Adam International Hospital",
  "license": "MIT"
}
