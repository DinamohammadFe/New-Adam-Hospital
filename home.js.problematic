    if (headerPlaceholder && !headerPlaceholder.innerHTML.trim()) {
      loadHeader();
    }
    
    if (footerPlaceholder && !footerPlaceholder.innerHTML.trim()) {
      loadFooter();
    }
    
    // Initialize other components
    initCounters();
