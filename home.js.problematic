    'index.html': 'home',
    'genetic-testing.html': 'genetic-testing',
    'ivf.html': 'ivf',
    'ivf-icsi.html': 'ivf-icsi',
    'endometriosis.html': 'endometriosis',
    'embryo-freezing.html': 'embryo-freezing',
    'female-fertility.html': 'female-fertility',
