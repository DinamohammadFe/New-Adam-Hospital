    });
  }

  // Close chatbot when clicking outside
  document.addEventListener("click", function (e) {
    if (
      isOpen &&
      chatbotToggle &&
      chatbotWindow &&
      !chatbotToggle.contains(e.target) &&
      !chatbotWindow.contains(e.target)
